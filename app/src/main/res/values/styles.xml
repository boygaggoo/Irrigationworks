<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimafAPPry</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>

    </style>
    <style name="AppTheme.DialogNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <!--  dialog主题设置  -->
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:dialogTheme">@style/DialogNoTitle</item>
    </style>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <style name="DialogNoTitle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item><!--除去title-->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="WaterMaskView">
        <!--栏背景色-->
        <attr name="title_background_color" format="color" />
        <!--左边按钮是否可见-->
        <attr name="left_button_visible" format="boolean" />
        <!--公司文字-->
        <attr name="company_text" format="string" />
        <!--公司文字颜色-->
        <attr name="title_text_color" format="color" />
        <!--logo文字-->
        <attr name="logo_button_text" format="string" />
        <!--左边按钮文字颜色-->
        <attr name="logo_button_text_color" format="color" />
        <!--左边按钮图标-->
        <attr name="logo_button_drawable" format="reference|integer" />
        <!--相关信息文字-->
        <attr name="info_text" format="string" />
        <!--相关信息文字颜色-->
        <attr name="info_text_color" format="color" />
        <!--右边按钮图标-->
        <attr name="right_button_drawable" format="reference|integer" />
    </declare-styleable>
    <!-- 标题1样式 -->
    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--返回-->
    <style name="LeftBlack">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="easy_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 后面的activity变暗 -->
    </style>
    <!--拍照-->
    <style name="dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/color_activity_blue_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ORC-->
    <style name="my_spinner_style" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ff808080</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>
    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>


    <style name="Theme.MaterialDesign" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/my_spinner_style</item>
        <item name="android:textSize">16.0sp</item>
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_dark_color</item>
        <item name="colorAccent">@color/app_primary_color</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:theme">@style/PopWindowStyle</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">43.0dip</item>
        <item name="android:minHeight">43.0dip</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#00CCFF</item>
        <item name="colorControlActivated">#00CCFF</item>
    </style>


    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>



</resources>
