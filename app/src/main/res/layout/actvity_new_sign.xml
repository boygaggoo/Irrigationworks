<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:openxu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"

        android:layout_height="40dip"
        />

    <TextView
        android:id="@+id/activity_main_tv_main_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d_40_px"
        android:textSize="@dimen/d_42_px" />

    <TextView
        android:id="@+id/activity_main_tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d_40_px"
        android:textColor="@color/hex_1b89cd"
        android:textSize="@dimen/d_95_px" />


    <LinearLayout
        android:id="@+id/activity_main_ll_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_130_px"
        android:visibility="gone"

        android:layout_marginTop="@dimen/d_54_px"
        android:background="@color/hex_e9e9ea"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_43_px"
            android:layout_marginStart="@dimen/d_43_px"
            android:textColor="@color/hex_9c9c9c"
            android:textSize="@dimen/d_43_px" />

        <TextView
            android:id="@+id/activity_main_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_44_px"
            android:layout_marginStart="@dimen/d_44_px"
            android:textColor="@color/hex_9c9c9c"
            android:textSize="@dimen/d_43_px" />
    </LinearLayout>

    <com.example.administrator.irrigationworks.Ui.newsign.CalendarViewGAC
        android:id="@+id/activity_main_cv"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip" />


</LinearLayout>
