<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workplan_show_note"
            android:layout_width="0dp"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_spread"
                android:layout_width="40dip"
                android:layout_height="40dip"

                android:layout_gravity="right"
                android:padding="10dip"
                android:src="@mipmap/xiala" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_list_content"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        android:background="#F6F6F6"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/feerb1"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"

            android:layout_weight="1"

            android:background="#01CCFF"
            android:button="@null"


            android:checked="true"
            android:gravity="center"
            android:text="导航"
            android:textColor="@drawable/font_white_pink_selector"
            android:textSize="12sp" />

        <Button
            android:id="@+id/feerb2"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"

            android:layout_weight="1"

            android:background="#51CFB1"


            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="巡查"
            android:textColor="@drawable/font_white_pink_selector"
            android:textSize="12sp" />

        <Button
            android:id="@+id/feerb3"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/btn_top_title_bac_selector"
            android:button="@null"
            android:gravity="center"
            android:text="坐标采集"
            android:textColor="@drawable/font_white_pink_selector"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/feerb4"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:background="#FFBA00"

            android:button="@null"


            android:checked="true"
            android:gravity="center"
            android:text="建设拍照"
            android:textColor="@drawable/font_white_pink_selector"
            android:textSize="12sp" />

        <Button
            android:id="@+id/feerb5"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:background="#FF3E3D"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="图册"
            android:textColor="@drawable/font_white_pink_selector"
            android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="#EBEBEB"

        android:orientation="horizontal"></LinearLayout>

</LinearLayout>
